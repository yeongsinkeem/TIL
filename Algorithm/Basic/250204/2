class Solution {
    public String[] solution(String[] strArr) {
        // 홀수번째 인덱스 -> 대문자
        // 짝수번째 인덱스 -> 소문자
        for(int i = 0; i < strArr.length; i++) {
            if ( i % 2 == 1 ) {
                strArr[i] = strArr[i].toUpperCase();
            }
            else {
                strArr[i] = strArr[i].toLowerCase();
            }
        }
        return strArr;
    }
}
